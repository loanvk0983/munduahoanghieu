	<script>
		// Gallery functionality - Wrap in DOMContentLoaded
		document.addEventListener('DOMContentLoaded', function() {
			// Gallery switching function
			function showGallery(type) {
				try {
					console.log('Switching to gallery:', type);
					
					// Hide all galleries
					document.querySelectorAll('.gallery-content').forEach(gallery => {
						gallery.classList.add('hidden');
					});
					
					// Remove active state from all tabs
					document.querySelectorAll('[id^="tab-"]').forEach(tab => {
						tab.classList.remove('bg-green-500', 'text-white', 'shadow-md', 'bg-orange-500');
						tab.classList.add('text-gray-600', 'shadow-sm');
					});
					
					// Show selected gallery
					const targetGallery = document.getElementById('gallery-' + type);
					if (targetGallery) {
						targetGallery.classList.remove('hidden');
					} else {
						console.error('Gallery not found:', 'gallery-' + type);
					}
					
					// Set active tab
					const activeTab = document.getElementById('tab-' + type);
					if (activeTab) {
						activeTab.classList.add('bg-green-500', 'text-white', 'shadow-md');
						activeTab.classList.remove('text-gray-600', 'shadow-sm');
					} else {
						console.error('Tab not found:', 'tab-' + type);
					}
				} catch (error) {
					console.error('Error in showGallery:', error);
				}
			}
			
			// Attach event listeners to gallery tabs
			document.querySelectorAll('.gallery-tab').forEach(button => {
				button.addEventListener('click', function() {
					const galleryType = this.getAttribute('data-gallery');
					showGallery(galleryType);
				});
			});
			
		console.log('Gallery functionality initialized');
	});

