  </div>
</div>

<script>
async function viewLog(filename) {
  try {
    const res = await fetch('/admin/logs/view?file=' + encodeURIComponent(filename));
    const data = await res.json();
    if (!data.success) {
      alert('Kh√¥ng th·ªÉ t·∫£i file: ' + (data.error || 'Unknown'));
      return;
    }
    const pre = document.getElementById('logContent');
    pre.textContent = data.content;
    pre.scrollTop = pre.scrollHeight;
  } catch (e) {
    alert('L·ªói t·∫£i file: ' + e.message);
  }
}

function clearLogs() {
  if (!confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a T·∫§T C·∫¢ logs? Thao t√°c n√†y kh√¥ng th·ªÉ ho√†n t√°c!')) {
    return;
  }
  
  fetch('/admin/logs/clear', {
    method: 'DELETE',
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      alert(data.message);
      window.location.reload();
    } else {
      alert('L·ªói: ' + (data.error || 'Kh√¥ng th·ªÉ x√≥a logs'));
    }
  })
  .catch(err => {
    console.error('Error:', err);
    alert('L·ªói k·∫øt n·ªëi server');
  });
}
</script>
