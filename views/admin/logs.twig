      <h3 class="text-lg font-semibold mb-3">Website logs</h3>
      {% if websiteLogs and websiteLogs|length > 0 %}
        <ul class="space-y-2 mb-4">
          {% for w in websiteLogs %}
            <li class="flex items-center justify-between gap-3">
              <div class="flex items-center gap-3">
