  event.target.closest('.product-menu-item').classList.add('active');

  // Hide welcome content and all product contents
  document.getElementById('welcome-content').style.display = 'none';
  document.querySelectorAll('.product-content').forEach(content => {
    content.style.display = 'none';
  });

  // Show selected product content
  const selectedContent = document.getElementById(`content-${productType}`);
  if (selectedContent) {
