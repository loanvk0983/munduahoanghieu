<section class="py-20 bg-green-50 overflow-hidden relative">
    <!-- Decorative background elements -->
    <div class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-green-100 rounded-full mix-blend-multiply filter blur-3xl opacity-50"></div>
    <div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-96 h-96 bg-yellow-100 rounded-full mix-blend-multiply filter blur-3xl opacity-50"></div>

    <div class="container mx-auto px-4 md:px-8 max-w-7xl relative z-10">
        <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-20">
            <!-- Content -->
            <div class="lg:w-1/2">
                <span class="inline-block px-4 py-1.5 bg-green-100 text-green-700 font-semibold rounded-full text-sm mb-6">
                    GIẢI PHÁP TOÀN DIỆN
                </span>
                <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight mb-6">
                    {{ content.solution.title | default('Giải Pháp Từ Hoàng Hiếu') }}
                </h2>
                <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                    {{ content.solution.description }}
                </p>

                <div class="space-y-6">
                    {% for benefit in content.solution.benefits %}
                    <div class="flex items-start p-4 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300">
                        <div class="flex-shrink-0 p-3 bg-green-100 rounded-lg text-green-600 mr-4">
                            {% if benefit.icon == 'sprout' %}
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                            {% elseif benefit.icon == 'shield-check' %}
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            {% elseif benefit.icon == 'piggy-bank' %}
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            {% else %}
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                            {% endif %}
                        </div>
                        <div>
                            <h3 class="text-lg font-bold text-gray-900 mb-1">{{ benefit.title }}</h3>
                            <p class="text-gray-600 text-sm">{{ benefit.description }}</p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Image/Visual -->
            <div class="lg:w-1/2 relative">
                <div class="relative rounded-2xl overflow-hidden shadow-2xl border-4 border-white">
                    <img src="{{ content.solution.image }}" alt="Giải pháp mụn dừa" class="w-full h-auto object-cover transform hover:scale-105 transition-transform duration-700" onerror="this.src='https://placehold.co/800x600?text=Solution+Image'">

                    <!-- Floating Badge -->
                    <div class="absolute bottom-6 left-6 bg-white/95 backdrop-blur-sm p-4 rounded-xl shadow-lg max-w-xs border border-green-100">
                        <div class="flex items-center gap-3">
                            <div class="bg-green-100 p-2 rounded-full">
                                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            </div>
                            <div>
                                <p class="text-sm font-semibold text-gray-900">Cam kết chất lượng</p>
                                <p class="text-xs text-gray-500">Tiêu chuẩn xuất khẩu</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Decorative dots -->
                <div class="absolute -bottom-6 -right-6 w-24 h-24 text-green-200">
                    <svg fill="currentColor" viewBox="0 0 100 100"><pattern id="dots" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="2" cy="2" r="2"></circle></pattern><rect width="100" height="100" fill="url(#dots)"></rect></svg>
                </div>
            </div>
        </div>
    </div>
</section>
