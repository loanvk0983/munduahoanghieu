<!-- Header 12: Pill Navigation -->
<header class="w-full font-sans bg-white/90 backdrop-blur-md border-b border-gray-100 z-[9998] sticky top-0">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
             <!-- Logo -->
            <a href="/" class="flex-shrink-0">
                <img class="h-10 w-auto" src="/assets/image/logo.svg" alt="Mụn Dừa Hoàng Hiếu">
            </a>

            <!-- Pill Nav -->
             <nav class="hidden md:flex items-center gap-2">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="px-4 py-1.5 rounded-lg text-sm font-semibold transition-all border border-transparent {% if currentPage == item.id %}bg-green-50 text-green-700 border-green-200{% else %}text-gray-600 hover:bg-gray-50 hover:text-gray-900{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </nav>

            <!-- Actions -->
            <div class="flex items-center gap-3">
                 <button onclick="performSearch()" class="p-2 text-gray-500 hover:bg-gray-100 rounded-full transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </button>
                <a href="tel:0984288512" class="hidden md:inline-flex items-center gap-1 px-4 py-2 bg-gray-900 text-white text-xs font-bold rounded-full hover:bg-gray-800 transition-colors">
                    <span>CALL US</span>
                </a>
                <button id="mobile-menu-btn-12" class="md:hidden p-2 text-gray-700">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu-12" class="hidden md:hidden bg-white px-4 pb-4 shadow-lg border-t border-gray-100">
        <div class="grid grid-cols-2 gap-2 pt-4">
             {% for item in [
                {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
            ] %}
            <a href="{{ item.url }}" class="flex items-center justify-center py-3 rounded-lg text-sm font-semibold {% if currentPage == item.id %}bg-green-100 text-green-800{% else %}bg-gray-50 text-gray-700{% endif %}">
                {{ item.text }}
            </a>
            {% endfor %}
        </div>
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-12');
        const menu = document.getElementById('mobile-menu-12');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
