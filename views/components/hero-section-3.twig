{# Hero Section 3: Centered Overlay with Dark Backdrop #}
{% set banner = content.banners|first %}
<section class="relative h-[600px] md:h-[700px] bg-gray-900 overflow-hidden md:rounded-2xl shadow-2xl">
    <!-- Background Image -->
    <div class="absolute inset-0">
        <img src="{{ banner.image }}" alt="{{ banner.title }}" class="w-full h-full object-cover opacity-60">
        <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-black/80"></div>
    </div>

    <!-- Content -->
    <div class="absolute inset-0 flex items-center justify-center text-center px-4">
        <div class="max-w-4xl space-y-8 animate-fade-in-up">
            <div class="inline-flex items-center justify-center px-4 py-1.5 rounded-full border border-white/30 bg-white/10 backdrop-blur-sm text-white text-sm font-medium mb-4">
                <span class="w-2 h-2 rounded-full bg-green-500 mr-2 animate-pulse"></span>
                Giải pháp nông nghiệp bền vững
            </div>

            <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white tracking-tight leading-tight">
                {{ banner.title }}
            </h1>

            <p class="text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto font-light">
                {{ banner.subtitle }}
            </p>

            <div class="flex flex-col sm:flex-row items-center justify-center gap-6 pt-8">
                {% set btnColorClass = 'bg-green-600 hover:bg-green-500' %}
                {% if banner.buttonColor == 'orange' %}
                    {% set btnColorClass = 'bg-orange-600 hover:bg-orange-500' %}
                {% endif %}

                <a href="{{ banner.buttonLink }}" class="{{ btnColorClass }} text-white min-w-[200px] px-8 py-4 rounded-full font-bold shadow-[0_0_20px_rgba(34,197,94,0.3)] transition transform hover:scale-105">
                    {{ banner.buttonText }}
                </a>

                <a href="#video-gioi-thieu" class="group flex items-center gap-3 text-white font-medium hover:text-green-400 transition">
                    <div class="w-12 h-12 rounded-full bg-white/10 border border-white/20 flex items-center justify-center group-hover:bg-white/20 transition">
                        <svg class="w-5 h-5 ml-1" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                    </div>
                    <span>Xem video giới thiệu</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Bottom Stats Strip -->
    <div class="absolute bottom-0 left-0 right-0 border-t border-white/10 bg-black/20 backdrop-blur-md">
        <div class="container mx-auto px-6 py-6 flex flex-wrap justify-around text-white/80 gap-4">
            <div class="text-center">
                <span class="block text-2xl font-bold text-white">500+</span>
                <span class="text-xs">Khách hàng</span>
            </div>
            <div class="text-center">
                <span class="block text-2xl font-bold text-white">100%</span>
                <span class="text-xs">Hữu cơ</span>
            </div>
            <div class="text-center">
                <span class="block text-2xl font-bold text-white">Top 1</span>
                <span class="text-xs">Chất lượng</span>
            </div>
        </div>
    </div>
</section>
