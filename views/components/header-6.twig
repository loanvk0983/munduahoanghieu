<!-- Header 6: Stacked Corporate -->
<header class="w-full font-sans bg-white shadow-md z-[9998] relative">
    <!-- Top Bar -->
    <div class="bg-green-900 text-green-50 text-xs py-1.5 border-b border-green-800">
        <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
            <span class="flex items-center gap-2 opacity-90"><svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/></svg> munduahoanghieu.vn@gmail.com</span>
            <div class="flex gap-4">
                <a href="#" class="hover:text-white hover:underline decoration-orange-500">Chính sách</a>
                <a href="#" class="hover:text-white hover:underline decoration-orange-500">Tuyển dụng</a>
            </div>
        </div>
    </div>

    <!-- Main Branding Area -->
    <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-4 group">
            <div class="p-2 border border-green-100 rounded-lg group-hover:border-green-300 transition-colors">
                 <img class="h-12 w-12 object-contain" src="/assets/image/logo.svg" alt="Logo">
            </div>
            <div class="flex flex-col">
                <span class="text-2xl font-bold text-green-800 uppercase tracking-tight leading-none">Hoàng Hiếu</span>
                <span class="text-sm text-gray-500 font-medium tracking-wide">Mụn dừa & Giá thể nông nghiệp</span>
            </div>
        </a>

        <!-- Search & Hotline -->
        <div class="hidden md:flex items-center gap-6">
            <div class="relative group">
                <input type="text" placeholder="Tìm sản phẩm..." class="pl-4 pr-10 py-2 border border-gray-300 rounded-sm w-64 focus:border-green-600 focus:outline-none focus:ring-1 focus:ring-green-600 transition-all text-sm">
                <button onclick="performSearch()" class="absolute right-0 top-0 h-full px-3 text-gray-400 group-focus-within:text-green-600">
                     <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </button>
            </div>
            <div class="text-right">
                <span class="block text-xs text-gray-500 uppercase font-bold">Hotline tư vấn</span>
                <a href="tel:0984288512" class="block text-lg font-bold text-orange-600 leading-none">0984.288.512</a>
            </div>
        </div>

        <!-- Mobile Toggle -->
         <button id="mobile-menu-btn-6" class="md:hidden p-2 text-green-800">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
        </button>
    </div>

    <!-- Navigation Bar -->
    <div class="bg-green-700 hidden md:block border-t border-green-600">
        <div class="max-w-7xl mx-auto px-4">
            <nav class="flex space-x-1">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="px-6 py-3 text-sm font-semibold text-white hover:bg-green-800 transition-colors uppercase tracking-wider {% if currentPage == item.id %}bg-green-900 shadow-inner text-orange-200{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </nav>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu-6" class="hidden md:hidden bg-white border-t border-gray-200 shadow-xl absolute w-full">
         {% for item in [
            {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
            {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
            {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
            {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
            {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
        ] %}
        <a href="{{ item.url }}" class="block px-6 py-3 border-b border-gray-100 text-sm font-bold uppercase {% if currentPage == item.id %}text-green-700 bg-green-50{% else %}text-gray-700{% endif %}">
            {{ item.text }}
        </a>
        {% endfor %}
         <div class="p-4">
             <input type="text" placeholder="Tìm kiếm..." class="w-full border p-2 rounded text-sm" onkeypress="handleSearchKeyPress(event)">
        </div>
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-6');
        const menu = document.getElementById('mobile-menu-6');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
