{# Hero Section 5: Asymmetric / Creative Layout #}
{% set banner = content.banners|first %}
<section class="bg-[#f8f9fa] overflow-hidden relative md:rounded-2xl shadow-lg">
    <div class="container mx-auto px-4 py-12 md:py-24 relative z-10">
        <div class="flex flex-col md:flex-row items-center">

            <!-- Left: Content -->
            <div class="w-full md:w-1/2 mb-10 md:mb-0 relative z-20">
                <div class="relative">
                    <div class="absolute -top-10 -left-10 w-24 h-24 bg-orange-100 rounded-full opacity-50 blur-xl"></div>
                    <div class="absolute top-20 right-10 w-32 h-32 bg-green-100 rounded-full opacity-50 blur-xl"></div>

                    <h1 class="text-5xl md:text-6xl lg:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-r from-green-700 to-green-500 mb-6 relative z-10 leading-tight">
                        {{ banner.title|split(' ')|slice(0, 2)|join(' ') }}<br>
                        <span class="text-gray-800">{{ banner.title|split(' ')|slice(2)|join(' ') }}</span>
                    </h1>
                </div>

                <p class="text-xl text-gray-500 mb-8 max-w-lg border-l-4 border-orange-500 pl-4">
                    {{ banner.subtitle }}
                </p>

                <div class="flex items-center gap-6">
                    <a href="{{ banner.buttonLink }}" class="relative px-8 py-3 bg-green-600 text-white font-bold rounded-br-2xl rounded-tl-2xl shadow-lg hover:shadow-green-500/30 hover:bg-green-700 transition-all duration-300 transform hover:-translate-y-1">
                        {{ banner.buttonText }}
                    </a>
                    <a href="#video" class="flex items-center gap-2 text-gray-600 hover:text-green-600 font-medium transition">
                        <span class="flex items-center justify-center w-10 h-10 bg-white shadow-md rounded-full text-green-600">
                            ‚ñ∂
                        </span>
                        Xem Demo
                    </a>
                </div>
            </div>

            <!-- Right: Image with shapes -->
            <div class="w-full md:w-1/2 relative">
                <!-- Abstract Background Shapes -->
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-contain bg-center bg-no-repeat opacity-10" style="background-image: url('data:image/svg+xml;base64,')"></div>

                <div class="relative z-10 transform rotate-2 hover:rotate-0 transition duration-500 ease-out">
                    <img src="{{ banner.image }}" alt="{{ banner.title }}" class="w-full h-auto rounded-3xl shadow-[20px_20px_0px_0px_rgba(34,197,94,0.2)] border-4 border-white">
                </div>

                <!-- Floating Info Card -->
                <div class="absolute -bottom-6 -left-6 bg-white p-4 rounded-xl shadow-xl z-20 flex items-center gap-3 animate-bounce-slow" style="animation-duration: 3s;">
                    <div class="bg-green-100 p-2 rounded-full text-green-600">
