<!-- Header 8: Structured/Bordered -->
<header class="w-full font-mono bg-white border-b-2 border-gray-900 z-[9998] relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 border-l-2 border-r-2 border-gray-900 bg-white">
        <div class="flex h-20">
            <!-- Logo Box -->
            <div class="flex-shrink-0 flex items-center justify-center border-r-2 border-gray-900 px-6">
                <a href="/" class="flex items-center gap-2">
                    <img class="h-10 w-10" src="/assets/image/logo.svg" alt="Logo">
                    <span class="font-bold text-gray-900 tracking-tighter uppercase hidden lg:block">Hoàng Hiếu</span>
                </a>
            </div>

            <!-- Nav Grid -->
            <nav class="hidden md:flex flex-1">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="flex-1 flex items-center justify-center text-sm font-bold uppercase tracking-wide border-r border-gray-200 hover:bg-green-50 hover:text-green-700 transition-colors {% if currentPage == item.id %}bg-gray-900 text-white hover:bg-gray-800 hover:text-white border-r-gray-900{% else %}text-gray-600{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </nav>

            <!-- Search Box -->
            <div class="flex items-center px-4 md:border-l-2 border-gray-900 flex-1 md:flex-none">
                 <div class="flex w-full items-center">
                    <input type="text" placeholder="TÌM KIẾM..." class="w-full bg-transparent border-none text-sm font-bold placeholder-gray-400 focus:ring-0 uppercase" onkeypress="handleSearchKeyPress(event)">
                    <button onclick="performSearch()" class="ml-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                    </button>
                 </div>
            </div>

             <!-- Mobile Hamburger -->
             <button id="mobile-menu-btn-8" class="md:hidden flex items-center justify-center w-16 border-l-2 border-gray-900">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu-8" class="hidden md:hidden border-b-2 border-l-2 border-r-2 border-gray-900 max-w-7xl mx-auto bg-white">
         {% for item in [
            {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
            {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
            {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
            {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
            {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
        ] %}
        <a href="{{ item.url }}" class="block px-6 py-4 border-b border-gray-200 font-bold uppercase {% if currentPage == item.id %}bg-gray-100{% endif %}">
            {{ item.text }}
        </a>
        {% endfor %}
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-8');
        const menu = document.getElementById('mobile-menu-8');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
