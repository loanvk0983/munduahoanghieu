<!-- Header 5: Compact Sticky -->
<header class="w-full bg-white/95 backdrop-blur-sm sticky top-0 z-[9998] border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16 md:h-20">

            <!-- Left: Logo & Nav Combined -->
            <div class="flex items-center gap-8 lg:gap-12">
                <!-- Logo -->
                <a href="/" class="flex items-center gap-2 group flex-shrink-0">
                    <img class="h-9 w-9 md:h-11 md:w-11" src="/assets/image/logo.svg" alt="Logo">
                    <span class="font-bold text-lg text-gray-800 group-hover:text-green-700 transition-colors">Hoàng Hiếu</span>
                </a>

                <!-- Desktop Nav -->
                <nav class="hidden md:flex items-center gap-6 lg:gap-8">
                     {% for item in [
                        {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                        {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                        {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                        {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                        {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                    ] %}
                    <a href="{{ item.url }}" class="text-sm font-medium transition-colors {% if currentPage == item.id %}text-green-700 font-bold{% else %}text-gray-600 hover:text-green-700{% endif %}">
                        {{ item.text }}
                    </a>
                    {% endfor %}
                </nav>
            </div>

            <!-- Right: Search & CTA -->
            <div class="flex items-center gap-3 md:gap-4">
                <div class="hidden md:flex items-center border border-gray-200 rounded-full px-3 py-1 bg-gray-50 hover:bg-white hover:border-green-400 transition-all group">
                    <input type="text" id="search-input-desktop" class="bg-transparent border-none text-xs w-24 focus:w-32 focus:outline-none transition-all text-gray-700 placeholder-gray-400" placeholder="Search..." onkeypress="handleSearchKeyPress(event)">
                    <button onclick="performSearch()" class="text-gray-400 group-hover:text-green-600">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                    </button>
                </div>

                <a href="tel:0984288512" class="hidden md:inline-flex items-center justify-center w-8 h-8 md:w-auto md:h-auto md:px-4 md:py-2 bg-orange-600 text-white text-xs md:text-sm font-bold rounded-lg shadow-sm hover:bg-orange-700 transition-colors">
                   <span class="hidden md:inline">Hotline</span>
                   <svg class="w-4 h-4 md:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                </a>

                <!-- Mobile Menu Button -->
                <button id="mobile-menu-btn-5" class="md:hidden p-2 text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu 5 -->
    <div id="mobile-menu-5" class="hidden md:hidden absolute top-full left-0 w-full bg-white border-b border-gray-200 shadow-xl">
        <div class="px-4 py-4 space-y-4">
            <div class="flex items-center bg-gray-100 rounded-lg px-3 py-2">
                 <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                 <input type="text" id="search-input-mobile-5" class="bg-transparent border-none text-sm w-full focus:outline-none text-gray-700" placeholder="Tìm kiếm..." onkeypress="handleSearchKeyPress(event)">
            </div>
            <nav class="space-y-1">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="block px-3 py-2 rounded-md font-medium transition-colors {% if currentPage == item.id %}text-green-700 bg-green-50{% else %}text-gray-600 hover:text-green-700 hover:bg-gray-50{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </nav>
        </div>
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-5');
        const menu = document.getElementById('mobile-menu-5');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
