<!-- Header 3: Corporate Minimal -->
<header class="w-full bg-white font-sans fixed top-0 z-[9998] shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center gap-2">
                <img class="h-10 w-10 md:h-12 md:w-12" src="/assets/image/logo.svg" alt="Logo">
                <span class="font-bold text-xl md:text-2xl text-gray-900 tracking-tight">Hoàng Hiếu<span class="text-green-600">.</span></span>
            </div>

            <!-- Nav -->
            <nav class="hidden md:flex space-x-8">
                {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="text-sm font-medium transition-colors hover:text-green-600 {% if currentPage == item.id %}text-green-600 font-bold{% else %}text-gray-500{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </nav>

            <!-- Actions -->
            <div class="hidden md:flex items-center space-x-4">
                 <button onclick="performSearch()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </button>
                <div class="h-6 w-px bg-gray-200"></div>
                <a href="tel:0984288512" class="px-5 py-2.5 bg-green-600 text-white text-sm font-semibold rounded-full hover:bg-green-700 transition-shadow shadow-md hover:shadow-lg">
                    Liên hệ ngay
                </a>
            </div>

            <!-- Mobile Toggle -->
            <button id="mobile-menu-btn-3" class="md:hidden text-gray-900 focus:outline-none">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu 3 -->
    <div id="mobile-menu-3" class="hidden md:hidden bg-gray-50 border-t border-gray-200">
        <div class="px-5 pt-4 pb-6 space-y-3">
             {% for item in [
                {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
            ] %}
            <a href="{{ item.url }}" class="block px-3 py-2 rounded-md text-base font-medium {% if currentPage == item.id %}text-green-700 bg-green-100{% else %}text-gray-700 hover:bg-gray-100{% endif %}">
                {{ item.text }}
            </a>
            {% endfor %}
            <div class="mt-4 pt-4 border-t border-gray-200">
                <a href="tel:0984288512" class="block w-full text-center px-4 py-3 bg-green-600 text-white rounded-lg font-bold">Gọi ngay 0984.288.512</a>
            </div>
        </div>
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-3');
        const menu = document.getElementById('mobile-menu-3');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
