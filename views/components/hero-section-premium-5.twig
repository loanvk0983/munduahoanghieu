<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof Swiper === 'undefined') return;

        new Swiper('.hero-premium-swiper-5', {
            loop: true,
            speed: 1000,
            direction: 'vertical',
            effect: 'slide',
            autoplay: {
                delay: 6000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination-5',
                clickable: true,
                renderBullet: function (index, className) {
                    return '<span class="' + className + ' !w-3 !h-3 !bg-gray-300 !opacity-100 hover:!bg-gray-900 transition-colors"></span>';
                },
            },
            navigation: {
                nextEl: '.swiper-button-next-5',
                prevEl: '.swiper-button-prev-5',
            },
             breakpoints: {
                // Change to horizontal on mobile if vertical swipe is annoying
                320: {
                    direction: 'horizontal',
                     pagination: {
                        el: '.swiper-pagination-5',
                        clickable: true,
                         renderBullet: function (index, className) {
                            return '<span class="' + className + ' !w-2 !h-2 !bg-gray-300 !opacity-100 hover:!bg-gray-900 transition-colors !mx-1"></span>';
                        },
                    },
                },
                768: {
                    direction: 'vertical',
                },
            },
        });
    });
</script>
