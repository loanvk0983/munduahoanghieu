<!-- Header 2: Modern Centered -->
<header class="w-full font-sans bg-white shadow-sm z-[9998] relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center py-4 md:h-28">

            <!-- Left: Contact (Desktop) -->
            <div class="hidden md:flex flex-col text-sm text-gray-500 gap-1 w-1/4">
                <span class="flex items-center gap-2"><svg class="w-4 h-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg> 0984.288.512</span>
                <span class="text-xs">Mon - Sat: 8:00 - 17:00</span>
            </div>

            <!-- Center: Logo -->
            <div class="flex-shrink-0 mb-4 md:mb-0">
                <a href="/" class="flex flex-col items-center group">
                    <img class="h-16 w-16 object-contain" src="/assets/image/logo.svg" alt="Logo">
                    <span class="text-green-800 font-bold text-lg tracking-widest mt-1 group-hover:text-green-600 transition-colors">HOÀNG HIẾU</span>
                </a>
            </div>

            <!-- Right: Search/Social (Desktop) -->
            <div class="hidden md:flex justify-end w-1/4 gap-4 items-center">
                 <div class="relative">
                    <input type="text" id="search-input-desktop" placeholder="Tìm kiếm..." class="pl-3 pr-8 py-1 text-sm border-b border-gray-300 focus:border-green-500 focus:outline-none w-40 transition-all focus:w-52" onkeypress="handleSearchKeyPress(event)">
                    <button onclick="performSearch()" class="absolute right-0 top-1 text-gray-400 hover:text-green-600">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                    </button>
                 </div>
            </div>

             <!-- Mobile Hamburger (Absolute Right) -->
             <div class="md:hidden absolute right-4 top-8">
                <button id="mobile-menu-btn-2" class="p-2 text-gray-700">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
                </button>
            </div>
        </div>

        <!-- Divider -->
        <div class="w-full h-px bg-gray-100"></div>

        <!-- Navigation (Centered) -->
        <nav class="hidden md:flex justify-center space-x-12 py-3">
             {% for item in [
                {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
            ] %}
            <a href="{{ item.url }}" class="text-sm font-bold uppercase tracking-widest hover:text-orange-500 transition-colors duration-300 relative group {% if currentPage == item.id %}text-orange-600{% else %}text-gray-800{% endif %}">
                {{ item.text }}
                <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
            </a>
            {% endfor %}
        </nav>

        <!-- Mobile Menu 2 -->
        <div id="mobile-menu-2" class="hidden md:hidden pb-4">
             {% for item in [
                {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
            ] %}
            <a href="{{ item.url }}" class="block px-4 py-3 border-t border-gray-100 text-center font-medium {% if currentPage == item.id %}text-orange-600{% else %}text-gray-700{% endif %}">
                {{ item.text }}
            </a>
            {% endfor %}
            <div class="px-8 mt-2">
                <input type="text" id="search-input-mobile-2" placeholder="Search..." class="w-full border rounded-full px-4 py-2 text-center text-sm bg-gray-50" onkeypress="handleSearchKeyPress(event)">
            </div>
        </div>
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-2');
        const menu = document.getElementById('mobile-menu-2');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
