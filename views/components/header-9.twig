<!-- Header 9: Floating Card -->
<div class="w-full bg-gray-100 pt-4 pb-0 z-[9998] relative">
    <header class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-xl shadow-lg border border-gray-100 px-6 py-3 flex justify-between items-center">
             <!-- Logo -->
            <a href="/" class="flex items-center gap-3">
                <img class="h-10 w-10 object-contain" src="/assets/image/logo.svg" alt="Logo">
                <span class="font-bold text-lg text-green-800 tracking-tight hidden sm:block">Hoàng Hiếu</span>
            </a>

             <!-- Nav -->
            <nav class="hidden md:flex items-center bg-gray-50 rounded-full px-2 py-1 border border-gray-100">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="px-4 py-2 text-sm font-medium rounded-full transition-all {% if currentPage == item.id %}bg-white text-green-700 shadow-sm{% else %}text-gray-600 hover:text-green-700{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </nav>

            <!-- Actions -->
            <div class="flex items-center gap-3">
                <div class="relative hidden sm:block">
                     <input type="text" placeholder="Tìm kiếm..." class="pl-8 pr-4 py-1.5 bg-gray-50 border-none rounded-lg text-sm w-32 focus:w-48 transition-all focus:ring-2 focus:ring-green-100" onkeypress="handleSearchKeyPress(event)">
                     <svg class="w-4 h-4 absolute left-2.5 top-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </div>
                 <button id="mobile-menu-btn-9" class="md:hidden p-2 text-gray-600 bg-gray-50 rounded-lg">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu-9" class="hidden md:hidden mt-2 bg-white rounded-xl shadow-lg border border-gray-100 p-4 absolute left-4 right-4 z-50">
             {% for item in [
                {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
            ] %}
            <a href="{{ item.url }}" class="block px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-50 {% if currentPage == item.id %}text-green-700 bg-green-50{% else %}text-gray-700{% endif %}">
                {{ item.text }}
            </a>
            {% endfor %}
        </div>
    </header>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-9');
        const menu = document.getElementById('mobile-menu-9');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
