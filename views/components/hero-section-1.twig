<style>
    .banner-swiper { height: 500px; }
    @media (min-width: 768px) { .banner-swiper { height: 600px; } }
    @media (min-width: 1024px) { .banner-swiper { height: 700px; } }
</style>
<section class="relative bg-white overflow-hidden shadow-xl md:rounded-2xl">
    <div class="swiper banner-swiper h-[500px] md:h-[600px] lg:h-[700px]">
        <div class="swiper-wrapper">
            {% if content.banners %}
                {% for banner in content.banners %}
                    {% if banner.active %}
                    <div class="swiper-slide relative">
                        <!-- Background Image -->
                        <div class="absolute inset-0 bg-gray-900">
                             <img src="{{ banner.image }}" alt="{{ banner.title }}" class="w-full h-full object-cover opacity-90">
                             <!-- Modern Gradient Overlay -->
                             <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/40 to-transparent"></div>
                        </div>

                        <!-- Content Container -->
                        <div class="absolute inset-0 flex items-center container mx-auto px-6 md:px-12">
                            <div class="max-w-2xl text-white space-y-6 animate-fade-in-up">
                                <span class="inline-block py-1 px-3 rounded-full bg-green-600/90 text-xs md:text-sm font-bold tracking-wider uppercase mb-2 backdrop-blur-sm">
                                    Sản phẩm tự nhiên
                                </span>
                                <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight tracking-tight">
                                    {{ banner.title }}
                                </h1>
                                <p class="text-lg md:text-xl text-gray-200 font-light leading-relaxed max-w-lg">
                                    {{ banner.subtitle }}
                                </p>
                                <div class="pt-4 flex flex-wrap gap-4">
                                    {% set btnColorClass = 'bg-green-600 hover:bg-green-700' %}
                                    {% if banner.buttonColor == 'orange' %}
                                        {% set btnColorClass = 'bg-orange-600 hover:bg-orange-700' %}
                                    {% elseif banner.buttonColor == 'blue' %}
                                        {% set btnColorClass = 'bg-blue-600 hover:bg-blue-700' %}
                                    {% endif %}

                                    <a href="{{ banner.buttonLink }}" class="{{ btnColorClass }} text-white px-8 py-3 rounded-lg font-semibold shadow-lg transition transform hover:-translate-y-1 hover:shadow-xl flex items-center gap-2">
                                        {{ banner.buttonText }}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                        </svg>
                                    </a>
                                    <a href="#contact" class="px-8 py-3 rounded-lg font-semibold border border-white text-white hover:bg-white hover:text-green-800 transition duration-300">
                                        Liên hệ ngay
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>

        <!-- Custom Navigation -->
        <div class="hidden md:flex absolute bottom-8 right-8 z-10 gap-2">
            <div class="swiper-button-prev !static !w-12 !h-12 !mt-0 !after:content-['prev'] !after:text-sm bg-white/10 hover:bg-green-600 text-white backdrop-blur-md rounded-full flex items-center justify-center transition-all border border-white/20"></div>
            <div class="swiper-button-next !static !w-12 !h-12 !mt-0 !after:content-['next'] !after:text-sm bg-white/10 hover:bg-green-600 text-white backdrop-blur-md rounded-full flex items-center justify-center transition-all border border-white/20"></div>
        </div>

        <!-- Pagination -->
        <div class="swiper-pagination !bottom-8 !left-8 !w-auto !text-left"></div>
    </div>

    <!-- Service Highlight Strip (Optional integration) -->
    {% if content.services and content.services.highlight %}
    <div class="hidden md:block absolute -bottom-1 right-0 bg-white/95 backdrop-blur shadow-2xl p-6 rounded-tl-2xl border-t-4 border-green-600 max-w-md z-20">
         <div class="flex items-start gap-4">
             <div class="text-3xl">{{ content.services.highlight.icon }}</div>
             <div>
                 <h4 class="font-bold text-green-800 text-lg">{{ content.services.highlight.title }}</h4>
                 <p class="text-sm text-gray-600 mt-1">{{ content.services.highlight.description }}</p>
             </div>
         </div>
    </div>
    {% endif %}
</section>
