<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof Swiper === 'undefined') return;

        var heroThumbs = new Swiper(".hero-premium-swiper-thumbs", {
            spaceBetween: 10,
            slidesPerView: 3,
            freeMode: true,
            watchSlidesProgress: true,
        });

        new Swiper('.hero-premium-swiper-main', {
            loop: true,
            speed: 1000,
            autoplay: {
                delay: 8000,
                disableOnInteraction: false,
            },
            thumbs: {
                swiper: heroThumbs,
            },
            pagination: {
                el: '.swiper-pagination-4',
                clickable: true,
            },
        });
    });
</script>
