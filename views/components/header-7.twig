<!-- Header 7: Split Navigation -->
<header class="w-full font-sans bg-white border-b border-gray-200 sticky top-0 z-[9998]">
    <div class="max-w-7xl mx-auto px-4 h-20 flex items-center justify-between md:justify-center relative">

        <!-- Mobile Toggle (Left) -->
        <button id="mobile-menu-btn-7" class="md:hidden p-2 -ml-2 text-gray-800">
             <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
        </button>

        <!-- Left Nav -->
        <nav class="hidden md:flex items-center space-x-8 pr-12">
            <a href="/" class="text-sm font-semibold uppercase tracking-wider hover:text-green-700 transition-colors {% if currentPage == 'home' %}text-green-700 underline underline-offset-4 decoration-2{% else %}text-gray-600{% endif %}">Trang chủ</a>
            <a href="/gioi-thieu" class="text-sm font-semibold uppercase tracking-wider hover:text-green-700 transition-colors {% if currentPage == 'about' %}text-green-700 underline underline-offset-4 decoration-2{% else %}text-gray-600{% endif %}">Giới thiệu</a>
            <a href="/san-pham" class="text-sm font-semibold uppercase tracking-wider hover:text-green-700 transition-colors {% if currentPage == 'products' %}text-green-700 underline underline-offset-4 decoration-2{% else %}text-gray-600{% endif %}">Sản phẩm</a>
        </nav>

        <!-- Center Logo -->
        <a href="/" class="flex-shrink-0 group z-10 bg-white p-2 rounded-full md:border-4 md:border-white md:-mt-8 md:shadow-lg transition-transform hover:scale-105">
            <img class="h-10 w-10 md:h-16 md:w-16 object-contain" src="/assets/image/logo.svg" alt="Logo">
        </a>

        <!-- Right Nav -->
        <nav class="hidden md:flex items-center space-x-8 pl-12">
            <a href="/tin-tuc" class="text-sm font-semibold uppercase tracking-wider hover:text-green-700 transition-colors {% if currentPage == 'news' %}text-green-700 underline underline-offset-4 decoration-2{% else %}text-gray-600{% endif %}">Tin tức</a>
            <a href="/lien-he" class="text-sm font-semibold uppercase tracking-wider hover:text-green-700 transition-colors {% if currentPage == 'contact' %}text-green-700 underline underline-offset-4 decoration-2{% else %}text-gray-600{% endif %}">Liên hệ</a>
            <button onclick="performSearch()" class="text-gray-400 hover:text-green-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
            </button>
        </nav>

         <!-- Mobile Search Icon (Right) -->
        <button onclick="document.getElementById('mobile-search-7').classList.toggle('hidden')" class="md:hidden p-2 -mr-2 text-gray-800">
             <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
        </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu-7" class="hidden md:hidden bg-white border-b border-gray-200">
         {% for item in [
            {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
            {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
            {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
            {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
            {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
        ] %}
        <a href="{{ item.url }}" class="block px-6 py-3 text-center text-sm font-bold uppercase hover:bg-gray-50 {% if currentPage == item.id %}text-green-700{% else %}text-gray-600{% endif %}">
            {{ item.text }}
        </a>
        {% endfor %}
    </div>

    <!-- Mobile Search Bar -->
    <div id="mobile-search-7" class="hidden md:hidden bg-gray-50 p-4 border-b border-gray-200">
        <input type="text" placeholder="Tìm kiếm..." class="w-full bg-white border border-gray-300 rounded-full px-4 py-2 text-sm focus:border-green-500 focus:outline-none" onkeypress="handleSearchKeyPress(event)">
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-7');
        const menu = document.getElementById('mobile-menu-7');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
