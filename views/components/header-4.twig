<!-- Header 4: Bold Brand (Green Background) -->
<header class="w-full font-sans bg-green-900 text-white shadow-xl z-[9998] relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-24">

            <!-- Logo White -->
            <a href="/" class="flex items-center gap-3">
                <div class="bg-white p-1.5 rounded-full shadow-lg">
                    <img class="h-12 w-12 object-contain" src="/assets/image/logo.svg" alt="Logo">
                </div>
                <div class="flex flex-col">
                    <span class="font-extrabold text-xl tracking-wide text-white">HOÀNG HIẾU</span>
                    <span class="text-green-200 text-xs italic opacity-90">Giá thể sạch – Năng suất vượt trội</span>
                </div>
            </a>

            <!-- Nav -->
            <nav class="hidden md:flex space-x-1">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="px-4 py-2 rounded-md text-sm font-semibold transition-all {% if currentPage == item.id %}bg-green-800 text-white shadow-inner{% else %}text-green-100 hover:bg-green-800 hover:text-white{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </nav>

            <!-- Search -->
            <div class="hidden md:block relative">
                <input type="text" id="search-input-desktop" class="bg-green-800 text-green-100 border-none rounded-full px-4 py-1.5 text-sm focus:ring-2 focus:ring-green-400 focus:bg-green-700 w-48 transition-all placeholder-green-300/50" placeholder="Tìm kiếm..." onkeypress="handleSearchKeyPress(event)">
                <button onclick="performSearch()" class="absolute right-2 top-1.5 text-green-300 hover:text-white">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </button>
            </div>

            <!-- Mobile Toggle -->
             <button id="mobile-menu-btn-4" class="md:hidden p-2 text-green-100 hover:text-white hover:bg-green-800 rounded-md">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu 4 -->
    <div id="mobile-menu-4" class="hidden md:hidden bg-green-800 border-t border-green-700">
        <div class="px-4 pt-2 pb-4 space-y-1">
             {% for item in [
                {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
            ] %}
            <a href="{{ item.url }}" class="block px-3 py-2 rounded-md text-base font-medium {% if currentPage == item.id %}bg-green-900 text-white{% else %}text-green-100 hover:bg-green-700 hover:text-white{% endif %}">
                {{ item.text }}
            </a>
            {% endfor %}
             <div class="px-3 mt-3">
                <input type="text" id="search-input-mobile-4" class="w-full bg-green-900 text-white border border-green-600 rounded-md px-3 py-2 text-sm placeholder-green-400" placeholder="Tìm kiếm..." onkeypress="handleSearchKeyPress(event)">
            </div>
        </div>
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-4');
        const menu = document.getElementById('mobile-menu-4');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
