<!-- Header 11: Business Dark -->
<header class="w-full font-sans bg-slate-900 text-white shadow-lg z-[9998] relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3">
                 <div class="bg-white/10 p-2 rounded-lg backdrop-blur-sm">
                    <img class="h-8 w-8 object-contain brightness-0 invert" src="/assets/image/logo.svg" alt="Logo" style="filter: brightness(0) invert(1);">
                </div>
                <span class="font-bold text-lg tracking-wide">HOANG HIEU</span>
            </a>

            <!-- Center Nav -->
            <nav class="hidden md:flex space-x-1 bg-white/5 rounded-full px-2 p-1 backdrop-blur-md border border-white/10">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="px-5 py-2 rounded-full text-sm font-medium transition-all {% if currentPage == item.id %}bg-green-600 text-white shadow-lg{% else %}text-gray-300 hover:text-white hover:bg-white/10{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </nav>

            <!-- Search -->
            <div class="hidden md:block">
                 <button onclick="performSearch()" class="p-2 text-gray-400 hover:text-white transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </button>
            </div>

             <!-- Mobile Toggle -->
            <button id="mobile-menu-btn-11" class="md:hidden text-gray-300 hover:text-white">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
            </button>
        </div>
    </div>

     <!-- Mobile Menu -->
     <div id="mobile-menu-11" class="hidden md:hidden bg-slate-800 border-t border-slate-700">
         {% for item in [
            {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
            {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
            {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
            {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
            {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
        ] %}
        <a href="{{ item.url }}" class="block px-6 py-4 border-b border-slate-700/50 text-sm font-bold uppercase tracking-wider {% if currentPage == item.id %}text-green-400{% else %}text-gray-400 hover:text-white{% endif %}">
            {{ item.text }}
        </a>
        {% endfor %}
         <div class="p-4">
             <input type="text" placeholder="Search..." class="w-full bg-slate-900 border border-slate-700 rounded p-3 text-white focus:border-green-500 focus:outline-none" onkeypress="handleSearchKeyPress(event)">
        </div>
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-11');
        const menu = document.getElementById('mobile-menu-11');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
