<!-- Header 13: Animated Underline -->
<header class="w-full font-sans bg-white border-b border-gray-100 z-[9998] relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-24">
             <!-- Logo -->
             <a href="/" class="group">
                <span class="block text-2xl font-black text-gray-900 tracking-tight group-hover:text-green-700 transition-colors">HOÀNG HIẾU<span class="text-orange-500">.</span></span>
            </a>

             <!-- Nav -->
             <nav class="hidden md:flex space-x-10">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="group relative text-sm font-bold uppercase tracking-widest text-gray-500 hover:text-black transition-colors py-2">
                    {{ item.text }}
                    <span class="absolute bottom-0 left-0 w-full h-0.5 bg-green-500 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-300 {% if currentPage == item.id %}scale-x-100{% endif %}"></span>
                </a>
                {% endfor %}
            </nav>

             <!-- Actions -->
            <div class="flex items-center space-x-6">
                <button onclick="performSearch()" class="text-gray-400 hover:text-black transition-colors">
                    Search
                </button>
                 <button id="mobile-menu-btn-13" class="md:hidden text-gray-900">
                    Menu
                </button>
            </div>
        </div>
    </div>

     <!-- Mobile Menu -->
     <div id="mobile-menu-13" class="hidden md:hidden bg-white fixed inset-0 z-50 flex flex-col pt-24 px-8">
         <button id="mobile-close-13" class="absolute top-8 right-8 text-2xl font-bold">&times;</button>
          {% for item in [
            {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
            {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
            {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
            {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
            {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
        ] %}
        <a href="{{ item.url }}" class="text-3xl font-black text-gray-900 mb-6 hover:text-green-600 transition-colors">
            {{ item.text }}
        </a>
        {% endfor %}
     </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-13');
        const close = document.getElementById('mobile-close-13');
        const menu = document.getElementById('mobile-menu-13');
        if(btn && menu) {
            btn.addEventListener('click', () => menu.classList.remove('hidden'));
            close.addEventListener('click', () => menu.classList.add('hidden'));
        }
    });
</script>
