<!-- Header 10: Accent Top -->
<header class="w-full font-sans bg-white shadow-sm border-t-4 border-orange-500 z-[9998] relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-20">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center">
                 <a href="/" class="flex items-center gap-2">
                    <img class="h-10 w-10 md:h-12 md:w-12" src="/assets/image/logo.svg" alt="Logo">
                    <span class="font-bold text-xl md:text-2xl text-gray-800">Hoàng Hiếu</span>
                </a>
            </div>

            <!-- Nav -->
            <div class="hidden md:flex space-x-8 items-center">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="inline-flex items-center px-1 pt-1 text-sm font-medium border-b-2 transition-colors h-full {% if currentPage == item.id %}border-orange-500 text-gray-900{% else %}border-transparent text-gray-500 hover:border-orange-300 hover:text-gray-700{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </div>

            <!-- Search Icon Only -->
            <div class="flex items-center">
                <div class="relative hidden md:block group">
                    <button class="p-2 text-gray-400 hover:text-gray-500">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                    </button>
                    <!-- Expandable Search Input -->
                    <div class="absolute right-0 top-full mt-2 w-64 bg-white shadow-xl rounded-md p-2 hidden group-hover:block hover:block">
                        <input type="text" placeholder="Tìm kiếm..." class="w-full border border-gray-200 rounded px-3 py-2 text-sm focus:outline-none focus:border-orange-500" onkeypress="handleSearchKeyPress(event)">
                    </div>
                </div>

                 <button id="mobile-menu-btn-10" class="md:hidden p-2 text-gray-600">
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
     <div id="mobile-menu-10" class="hidden md:hidden bg-white border-t border-gray-200">
         {% for item in [
            {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
            {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
            {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
            {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
            {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
        ] %}
        <a href="{{ item.url }}" class="block px-4 py-3 text-base font-medium text-gray-600 hover:text-orange-600 hover:bg-orange-50 {% if currentPage == item.id %}text-orange-600 border-l-4 border-orange-500 bg-orange-50{% endif %}">
            {{ item.text }}
        </a>
        {% endfor %}
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-10');
        const menu = document.getElementById('mobile-menu-10');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
