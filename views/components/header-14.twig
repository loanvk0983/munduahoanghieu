<!-- Header 14: Boxed/Contained -->
<div class="bg-gray-100 p-4 sticky top-0 z-[9998]">
    <header class="max-w-7xl mx-auto bg-white rounded-lg shadow-sm border border-gray-200 px-6 h-16 flex items-center justify-between">
         <!-- Logo -->
        <a href="/" class="flex items-center gap-2">
            <div class="h-8 w-8 bg-green-600 rounded flex items-center justify-center text-white font-bold">H</div>
            <span class="font-bold text-gray-800">Hoàng Hiếu</span>
        </a>

         <!-- Nav -->
        <nav class="hidden md:flex space-x-6">
             {% for item in [
                {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
            ] %}
            <a href="{{ item.url }}" class="text-sm font-medium text-gray-600 hover:text-green-600 transition-colors {% if currentPage == item.id %}text-green-600{% endif %}">
                {{ item.text }}
            </a>
            {% endfor %}
        </nav>

         <!-- Actions -->
         <div class="flex items-center gap-4">
             <div class="hidden md:flex h-8 bg-gray-100 rounded-md items-center px-3">
                 <svg class="w-4 h-4 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                 <input type="text" placeholder="Search" class="bg-transparent border-none text-xs w-20 focus:outline-none" onkeypress="handleSearchKeyPress(event)">
             </div>
             <a href="tel:0984288512" class="h-8 w-8 bg-orange-100 text-orange-600 rounded-full flex items-center justify-center hover:bg-orange-200 transition-colors">
                 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
             </a>
              <button id="mobile-menu-btn-14" class="md:hidden text-gray-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
            </button>
         </div>
    </header>

     <!-- Mobile Menu -->
     <div id="mobile-menu-14" class="hidden md:hidden mt-2 bg-white rounded-lg shadow-sm border border-gray-200 p-2 max-w-7xl mx-auto">
          {% for item in [
            {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
            {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
            {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
            {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
            {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
        ] %}
        <a href="{{ item.url }}" class="block px-4 py-2 rounded text-sm text-gray-700 hover:bg-gray-50 font-medium">
            {{ item.text }}
        </a>
        {% endfor %}
     </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-14');
        const menu = document.getElementById('mobile-menu-14');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
