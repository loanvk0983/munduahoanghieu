<!-- Header 15: Compact/High-Density -->
<header class="w-full font-sans bg-white border-b border-gray-300 z-[9998] relative text-xs">
    <!-- Top Strip -->
    <div class="bg-gray-100 border-b border-gray-200 py-1 px-4">
        <div class="max-w-screen-2xl mx-auto flex justify-between">
            <div class="flex gap-4">
                <span>Welcome to Hoàng Hiếu Co., Ltd</span>
                <span class="text-gray-400">|</span>
                <span>ISO 9001:2015 Certified</span>
            </div>
            <div class="flex gap-4">
                <a href="#" class="hover:text-green-600">Support</a>
                <a href="#" class="hover:text-green-600">Login</a>
            </div>
        </div>
    </div>

    <!-- Main Bar -->
    <div class="max-w-screen-2xl mx-auto px-4 h-12 flex items-center justify-between">
         <div class="flex items-center gap-8">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2 font-bold text-lg text-gray-900">
                <img class="h-6 w-6" src="/assets/image/logo.svg" alt="Logo">
                HOANG HIEU
            </a>

            <!-- Nav -->
            <nav class="hidden md:flex gap-1">
                 {% for item in [
                    {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
                    {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
                    {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
                    {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
                    {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
                ] %}
                <a href="{{ item.url }}" class="px-3 py-1.5 rounded hover:bg-gray-100 font-semibold uppercase {% if currentPage == item.id %}bg-gray-200 text-black{% else %}text-gray-600{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </nav>
         </div>

         <!-- Right Side -->
         <div class="flex items-center gap-2">
             <div class="hidden md:flex items-center border border-gray-300 rounded px-2 py-1">
                 <input type="text" placeholder="Search product SKU..." class="border-none bg-transparent text-xs w-32 focus:outline-none" onkeypress="handleSearchKeyPress(event)">
                 <svg class="w-3 h-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
             </div>
             <a href="/lien-he" class="hidden md:inline-block px-3 py-1 bg-green-700 text-white font-bold rounded hover:bg-green-800">QUOTE</a>
              <button id="mobile-menu-btn-15" class="md:hidden p-1 text-gray-800 border border-gray-300 rounded">
                 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
            </button>
         </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu-15" class="hidden md:hidden bg-white border-b border-gray-200 p-4">
         {% for item in [
            {'url': '/', 'text': 'Trang chủ', 'id': 'home'},
            {'url': '/gioi-thieu', 'text': 'Giới thiệu', 'id': 'about'},
            {'url': '/san-pham', 'text': 'Sản phẩm', 'id': 'products'},
            {'url': '/tin-tuc', 'text': 'Tin tức', 'id': 'news'},
            {'url': '/lien-he', 'text': 'Liên hệ', 'id': 'contact'}
        ] %}
        <a href="{{ item.url }}" class="block py-2 border-b border-gray-100 font-bold uppercase text-gray-700">
            {{ item.text }}
        </a>
        {% endfor %}
    </div>
</header>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobile-menu-btn-15');
        const menu = document.getElementById('mobile-menu-15');
        if(btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    });
</script>
