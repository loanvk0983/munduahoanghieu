<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof Swiper === 'undefined') return;

        new Swiper('.hero-premium-swiper-1', {
            loop: true,
            speed: 1500,
            effect: 'fade',
            autoplay: {
                delay: 6000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination-1',
                clickable: true,
                renderBullet: function (index, className) {
                    return '<span class="' + className + ' w-12 h-1 bg-white/30 hover:bg-white transition-all duration-300 block rounded-none"></span>';
                },
            },
            navigation: {
                nextEl: '.swiper-button-next-1',
                prevEl: '.swiper-button-prev-1',
            },
        });
    });
</script>
<style>
    .hero-premium-swiper-1 .swiper-pagination-bullet-active {
        background-color: #fff !important;
        opacity: 1 !important;
    }
</style>